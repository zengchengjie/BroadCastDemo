<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a10062376.broadcastdemo.SecondActivity">

    <Button
        android:id="@+id/btnBroadCast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送广播" />

    <Button
        android:id="@+id/btnCloseActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnBroadCast"
        android:layout_marginTop="102dp"
        android:text="关闭当前页面" />

    <Button
        android:id="@+id/btnTurnToThird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnCloseActivity"
        android:layout_marginTop="65dp"
        android:text="跳转到第三个页面" />
</RelativeLayout>
